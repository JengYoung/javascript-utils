{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "allowJs": true,
    "module": "esnext",
    "lib": ["esnext", "DOM"],
    "moduleResolution": "node",
    "rootDir": ".",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
